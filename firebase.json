{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "website/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "headers": [ {
      "source": "**",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=0, no-cache"
      } ]
    }, {
      "source": "**/*.@(png|ico)",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=3600"
      } ]
    }, {
      "source": "static/**",
      "headers": [ {
        "key": "Cache-Control",
        "value": "max-age=31536000"
      } ]
    } ]
  }
}
